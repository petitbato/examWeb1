<!DOCTYPE html>
<script>
  var successMessage = document.getElementById('successMessage');
</script>
<h1>Words Data</h1>
<table>
  <tr>
    <th>Word</th>
    <th>Translation</th>
    <th>Score</th>
    <th>Actions</th>
  </tr>
  <% for (var i = 0; i < words.length; i++) { %>
    <tr>
      <td><%= words[i]["word"] %></td>
      <td><%= words[i]["correctWord"] %></td>
      <td><%= scores[i] %></td>
      <td><a href="/manager/delete/<%= words[i].id %>">Delete</a> </button></td>
    </tr>
  <% } %>
</table>
<form action="/manager/add" method="POST">
  <label>Word to add</label>
  <input name="word" />
  <label>Translation</label>
  <input name="correctWord">
  <input type="submit" />
  <% if (message) { %>
    <p id="successMessage" class="success"><%= message %></p>
  <% } %>
  </form>

  <form formmethod="get" action="/">
    <button type="submit">Word quizz</button>
  </form>
    

